{
  "extends": "@coze-arch/ts-config/tsconfig.node.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "tsBuildInfoFile": "lib/tsconfig.build.tsbuildinfo",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
